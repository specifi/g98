// Append new data
$("<%=j render(:partial => 'shared/posts', :object => @posts) %>")
  .appendTo($(".infinite-table .posts"));

// Update pagination link
<% if @posts.last_page? %>
  $('.pagination').html("That's all, folks!");
<% else %>
  $('.pagination')
    .html("<%=j link_to_next_page(@posts, 'Next Page', :remote => true) %>");
<% end %>
