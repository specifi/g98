<%= form_for @post do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Upload Image</label>
    <%= f.text_field :url, class: "form-control" %>
    <%= f.cl_image_upload(:image, :return_delete_token=>true) %>

    <div class="preview"></div>
    <div class="progress hidden">
      <div class="progress-bar" role="progressbar" aria-valuemax="100" style="width: 0%;"></div>
    </div>
  </div>

  <%= f.submit "Create Post", class: "btn btn-default" %>
<% end  %>

<%= cloudinary_js_config %>
<%= javascript_include_tag 'cloudinary-upload', 'data-turbolinks-track' => true %>
